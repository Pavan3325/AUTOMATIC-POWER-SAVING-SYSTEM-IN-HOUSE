#include<reg51.h>
#define lcd_data P2
  sbit l=P3^0;
sbit lcd_rs = P*2^0;
sbit lcd_en = P*2^1;
unsigned char req=0;
   void test (void) interrupt 0 using 2
{
req=1;
l = 0;
1 = ~1;
}
sbit rd=P3^*5;
sbit wr=P3^6;
sbit intr=P3^7;
sbit ldr=P3^1;


sbit m1=P0^0;

void convert (unsigned char v);
void delay(unsigned int t)
{
unsigned int x,v;
for(x=0;x<t;x++)
for(y=0;y<1275;y++);
}

void lcdcmd(unsigned char value)
{
lcd_data=value&(0xf0); //send msb 4 bits

lcd data=((value<<4) & (0xf0));  //send lsb 4 bits
lcd rs=0; //select command register the lcd to execute command
1cd en-1; //enable the lcd to excute command
	delay (3);
	lcd_en=0;
}
void lcd_init(void)
{ 
1cdcmd(0x02);
1cdcmd(0x02);
lcdcmd(0x28);   //intialise the lcd in 4 bit mode*/
lcdcmd(0x28);   //intialise the lcd in 4 bit mode*/
1cdcmd(0x0e);   //cursor blinking
1cdcmd(0x06);   //move the cursor to right side
1cdcmd(0x01);   //clear the lcd
}
void lcddat (unsigned char value)
{

lcd_data-value&(0xf0);          //send msb 4 bits
lcd_data=((value<<4) & (0xf0)); //send lsb 4 bits
lcd_rs=1;                    //select data register
1cd 1cd en-1;                //enable the lcd to execute data
	delay (3);
	lcd_en=0;

delay(3); )

void msgdisplay(unsigned char b[]) // send string to led
{
unsigned char s,count=0;
for(s=0;b(s)!= '\0';s++)
{
lcddat (b[s]);
}
}
void main()
{
unsigned char v = 0;
lcd_init();
lcd_data=0xff;
while(1)
{ 
wr = 0;
wr=1;
while(intr== 1); 
rd = 0;
v =p1;
convert(v);
rd=1;
 if(v>=0 && v <= 25 )
{
m1=1;
1cdcmd(0xc0);
msgdisplay("Fan OFF");
delay (200);
}
else if (v>25 && v <= 200)
{
m1=0;
1cdcmd(0xc0);
msgdisplay("Fan on");
delay(400);
}
if(ldr==0) 
{
l=0
}
else if(ldr== 1)
{
  1=1;
}
}
}
 void convert (unsigned char v)
{
unsigned int i,j,k,l;
i=v/100;
i=i|0x30;
1cdcmd(0x80);
lcddat(i);
j=v%100;
k=j/10;
k=k| 0x30;
lcddat(k);
1=j%10;
l=l|0x30;
lcddat(1);
}
